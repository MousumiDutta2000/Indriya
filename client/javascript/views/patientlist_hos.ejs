<body class="container-fluid">
    <h2 style="padding-left: 5%;">Patient Information</h2>
    <br>
    <div style="min-height: 90%;">
    <table class="table" style="padding-left: 5%;">
        <thead>
            <tr>
                <th scope="col" class="blockquote">ID</th>
                <th scope="col" class="blockquote">First Name</th>
                <th scope="col" class="blockquote">Last Name</th>
                <th scope="col" class="blockquote">Organ Type</th>
                <th scope="col" class="blockquote">Blood Group</th>
                <th scope="col" class="blockquote">Gender</th>
                <th scope="col" class="blockquote">Match</th>
            </tr>
        </thead>
        
        <tbody class="table-group-divider blockquote" >
            <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td scope="row">
                        <%= data[i].Record.PID %>
                    </td>
                    <td>
                        <%= data[i].Record.firstName %>
                    </td>
                    <td>
                        <%= data[i].Record.lastName %>
                    </td>
                    <td>
                        <%= data[i].Record.organRequired %>
                    </td>
                    <td>
                        <%= data[i].Record.bloodgroup %>
                    </td>
                    <td>
                        <%= data[i].Record.gender %>
                    </td>
                    <% if(data[i].Record.match !='' ){ %>
                        <td>
                            <%= data[i].Record.match %>
                        </td>
                        <% }else{ %>
                            <td><a href=<%="/findmatch/" +data[i].Record.organRequired+"/"+ data[i].Record.bloodgroup
                                    + "/" + data[i].Record.gender + "/" + data[i].Record.PID %>>Find Match</a></td>
                            <% } %>
                </tr>
                <% } %>
        </tbody>
     
    </table>
