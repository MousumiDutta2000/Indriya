<body class="container-fluid">
  <div style="min-height: 90%;"> 
    <h2 style="padding-left: 5%;">Donor Information</h2><br>
    <table class="table" style="padding-left: 5%;">
        <thead>
            <tr>
                <th scope="col" class="blockquote">ID</th>
                <th scope="col" class="blockquote">First Name</th>
                <th scope="col" class="blockquote">Last Name</th>
                <th scope="col" class="blockquote">Age</th>
                <th scope="col" class="blockquote">Phone Number</th>
                <th scope="col" class="blockquote">Address</th>
                <th scope="col" class="blockquote">Organ Type</th>
                <th scope="col" class="blockquote">Blood Group</th>
                <th scope="col" class="blockquote">Gender</th>
                <th scope="col" class="blockquote">Medical History</th>
                <th scope="col" class="blockquote">Match</th>
                <th scope="col" class="blockquote">Delete</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td scope="row">
                        <%= data[i].Record.PID %>
                    </td>
                    <td>
                        <%= data[i].Record.firstName %>
                    </td>
                    <td>
                        <%= data[i].Record.lastName %>
                    </td>
                    <td>
                        <%= data[i].Record.age %>
                    </td>
                    <td>
                        <%= data[i].Record.phoneNumber %>
                    </td>
                    <td>
                        <%= data[i].Record.address %>
                    </td>
                    <td>
                        <%= data[i].Record.organRequired %>
                    </td>
                    <td>
                        <%= data[i].Record.bloodgroup %>
                    </td>
                    <td>
                        <%= data[i].Record.gender %>
                    </td>
                    <td>
                        <%= data[i].Record.medhistory %>
                    </td>
                    <td>
                        <%= data[i].Record.match %>
                    </td>
                    <td><a href=<%="/donor/delete/" +data[i].Record.PID%>>Delete</a></td>
                </tr>
                <% } %>
        </tbody>
    </table>
  </div>
