<body class="container-fluid ">
  <div style="min-height: 90%;"> 
  <h1 style="padding-left: 5%;">Add a Patient or Donor</h1>
  <hr>
  <form class="blockquote " action="/createpatient" method="post" style="padding-left: 5%;">
<div class="row">
    <div class="col-md-2">
      <label class="form-label" for="autoSizingSelect">Type</label>
      <select class="form-select" name="docType" required>
        <option value="patient">Patient</option>
        <option value="donor">Donor</option>
      </select>
    </div>
    <div class="col-md-2">
      <label for="name" class="form-label">ID</label>
      <label for="caption" style="color: red;font-size: 10px;">*(should not contain any special charecters(!,-*))</label>
      <input type="text" class="form-control" name="PID"  pattern="[A-Z a-z 0-9]*$" required>
    </div>
    </div>
    <div class="row">
    <div class="col-md-4">
      <label for="name" class="form-label">First Name</label>
      <input type="text" class="form-control" name="firstName" required>
    </div>
    <div class="col-md-4">
      <label for="name" class="form-label">Last Name</label>
      <input type="text" class="form-control" name="lastName" required>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
      <label for="name" class="form-label">Phone</label>
      <label for="caption" style="color: red;font-size: 10px;">*(must be number(0-9))</label>
      <input type="text" class="form-control" name="phoneNumber" pattern="^\d{10}$" required>
    </div>
    <div class="col-6">
      <label for="inputAddress2" class="form-label">Address</label>
      <input type="text" class="form-control" placeholder="Apartment, Street" name="address" required>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
      <label class="form-label" for="autoSizingSelect">Organ Type</label>
      <select class="form-select" name="organRequired" required>
        <option value="Heart">Heart</option>
        <option value="Kidney">Kidney</option>
        <option value="Liver">Liver</option>
         <option value="Eyes">Eyes</option>
      </select>
    </div>
    <div class="col-md-2">
      <label class="form-label" for="autoSizingSelect">Blood Group</label>
      <select class="form-select" name="bloodgroup" required>
        <option value="A+">A+</option>
        <option value="B+">B+</option>
        <option value="O+">O+</option>
        <option value="A-">A-</option>
        <option value="B-">B-</option>
        <option value="O-">O-</option>
        <option value="AB+">AB+</option>
        <option value="AB-">AB-</option>
      </select>
    </div>
    </div>
    <div class="row">
    <div class="col-md-2">
      <label for="name" class="form-label">Age</label>
      <label for="caption" style="color: red;font-size: 10px;">*(must be 5-70 years)</label>
      <input type="text" class="form-control" name="age" pattern="^[5-70]*$" required>
    </div>
    <div class="col-md-2">
      <label class="form-label" for="autoSizingSelect">Gender</label>
      <select class="form-select" id="autoSizingSelect" name="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
</div>

    <div class="col-md-4">
      <label for="name" class="form-label">Medical History</label>
      <input type="text" class="form-control" name="medhistory" required>
    </div>
    <br>
    <div class="col-12 text-center ">
      <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </div>
  </form>
